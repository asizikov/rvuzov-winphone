<UserControl x:Class="TimeTable.Controls.TimeTableSmallHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
             x:Name="SmallHeader"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="81" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
    	<Grid x:Name="Header" HorizontalAlignment="Left" Height="81" VerticalAlignment="Top" Width="480" Background="{StaticResource NewTimeTableHighlightBrush}">
    		<Border BorderBrush="#66000000" BorderThickness="0,0,0,1" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="480"/>
    		<TextBlock Text="{Binding Text, ElementName=SmallHeader}" 
    			Style="{StaticResource TimeTableHeaderTextBlockStyle}"/>
    		<Rectangle HorizontalAlignment="Center" Height="1" VerticalAlignment="Bottom" Width="480" Margin="0" Fill="#34000000" StrokeThickness="0"/>
    	</Grid>

    </Grid>
</UserControl>